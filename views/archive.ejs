<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/global.css" />
    <link rel="stylesheet" href="/styles/archive.css" />
    <title>Check-In Admin | Archives</title>
  </head>
  <body>
    <%- include("components/navbar") %>
    <div class="container">
      <h2>Archives of Previous Study Runs</h2>
      <div id="archive-list">
        <% archives.forEach(archive => { %>
        <div class="archive-card">
          <p>Created At: <%= archive.timestamp %></p>
          <p>Participant Count: <%= archive.data.length %></p>
          <a href="/download-archive/<%= archive._id %>">Download</a>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
